<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    tools:context=".TicTacToe">


    <TextView
        android:id="@+id/X"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:text="Player1:"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/XScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="0"
        android:textSize="20dp"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toEndOf="@+id/X"
        app:layout_constraintTop_toTopOf="@+id/X" />

    <TextView
        android:id="@+id/O"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Player2:"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/X"
        app:layout_constraintTop_toBottomOf="@+id/X" />

    <TextView
        android:id="@+id/OScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="0"
        android:textSize="20dp"
        android:textColor="@color/blue"
        app:layout_constraintStart_toEndOf="@+id/O"
        app:layout_constraintTop_toTopOf="@+id/O" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_radius"
        android:text="new game"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="60dp"
        android:background="@drawable/bottom_right_border"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btn0"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="50dp"
        />

    <Button
        android:id="@+id/btn2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="60dp"
        android:background="@drawable/bottom_right_border"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/btn1"
        app:layout_constraintLeft_toRightOf="@id/btn1"
        />

    <Button
        android:id="@+id/btn3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="60dp"
        android:background="@drawable/bottom_border"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/btn2"
        app:layout_constraintLeft_toRightOf="@id/btn2"
        />

    <Button
        android:id="@+id/btn4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="60dp"
        android:background="@drawable/bottom_right_border"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btn1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="35dp"
        />

    <Button
        android:id="@+id/btn5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="60dp"
        android:background="@drawable/bottom_right_border"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/btn4"
        app:layout_constraintLeft_toRightOf="@id/btn4"
        />

    <Button
        android:id="@+id/btn6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="60dp"
        android:background="@drawable/bottom_border"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/btn5"
        app:layout_constraintLeft_toRightOf="@id/btn5"
        />

    <Button
        android:id="@+id/btn7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="60dp"
        android:background="@drawable/right_border"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btn4"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="35dp"
        />

    <Button
        android:id="@+id/btn8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="60dp"
        android:background="@drawable/right_border"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/btn7"
        app:layout_constraintLeft_toRightOf="@id/btn7"
        />

    <Button
        android:id="@+id/btn9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="60dp"
        android:background="@color/black"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/btn8"
        app:layout_constraintLeft_toRightOf="@id/btn8"
        />

</androidx.constraintlayout.widget.ConstraintLayout>